{{!-- Navigation Page --}}
<header id="header" class="header header-topbar u-align-center">

  <div class="header-topbar-left">
    {{!-- Menu open  --}}
    <a href="#" id="menu-open" class="menu-open icon-menu"></a>
    {{!-- Logo and Page Name --}}
    <a class="header-logo u-align-center" href="{{@blog.url}}">{{#if @blog.logo}}<img src="{{@blog.logo}}" alt="{{@blog.title}}"/>{{else}}<span>{{@blog.title}}</span>{{/if}}</a>
  </div>

  <div class="header-topbar-center">
    {{!-- Form Search --}}
    <form class="search">
      <a href="#" class="search-btn hidden-on-small-screen icon-search"></a>
      <a href="#" id="search-close" class="search-btn show-on-small-screen icon-arrow_back"></a>
      <input class="search-field" type="search" placeholder="Search" autocomplete="off">
      <div id="search-result" class="autocomplete"></div>
    </form>
    {{!-- Open buttom search --}}
    <a href="#" id="search-open" class="search-open show-on-small-screen icon-search"></a>
  </div>

  <div class="header-topbar-right hidden-on-small-screen">
    <div class="header-social u-align-center">
      {{!-- Social navigation --}}
      <div class="header-social-icon"><span class="icon-user-add"></span><span class="social-name">Follow Me</span></div>
      {{!-- social Panel --}}
      <div class="header-socialPanel">
        <ul>
          <li><a href="https://twitter.com/" target="_blank"><span class="social-img c-twitter icon-twitter"></span><span class="social-name">Twitter</span></a></li>
          <li><a href="https://github.com/" target="_blank"><span class="social-img c-github icon-github"></span><span class="social-name">GitHub</span></a></li>
          <li><a href="http://www.youtube.com/" target="_blank"><span class="social-img c-youtube icon-youtube"></span><span class="social-name">YouTube</span></a></li>
          <li><a href="https://www.linkedin.com/" target="_blank"><span class="social-img c-linkedin icon-in"></span><span class="social-name">Linkedin</span></a></li>
          <li><a href="https://www.instagram.com/" target="_blank"><span class="social-img c-instagram icon-instagram"></span><span class="social-name">Instagram</span></a></li>
          <li><a href="https://plus.google.com/" target="_blank"><span class="social-img c-google-plus icon-google-plus"></span><span class="social-name">Google +</span></a></li>
		  <li><a href="http://cloud.feedly.com/#subscription%2Ffeed%2Fhttp%3A%2F%2Fthedataplumber.net%2Frss"  target="_blank"><img id="feedlyFollow" src="http://s3.feedly.com/img/follows/feedly-follow-square-flat-green_2x.png"><span class="social-name">feedly</span></a></li>
		  <li><a href="http://feeds.feedburner.com/" target="_blank"><span class="social-img c-github icon-feed"></span><span class="social-name">RSS Feed</span></a></li>
		  <li><a id="open-popup" href="#" onclick="function();return false;"><span class="social-img c-linkedin icon-mail"></span><span class="social-name">Subscribe</span></a></li>
        </ul>
      </div>
    </div>
  </div>

</header>

