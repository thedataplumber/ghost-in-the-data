{{!-- Add Layout --}}
{{!< default}}
{{#post}}
<main class="main">
  <section class="main-wrap full-site-width" style="padding-top:64px">
    <div class="main-post">
      {{!-- Post Content --}}
      <article class="post">
        {{!-- Add Author date --}}
        <div class="post-author">
          {{#author}}
          {{!--Author avatar --}}
          <a href="{{url}}" class="post-author-avatar"><img src="{{#if image}}{{image}}{{else}}{{asset "img/user-image.png"}}{{/if}}" alt="{{name}}" /> </a>
          <div class="post-author-right">
            {{!--Author name --}}
            <a class="post-author-name" href="{{url}}">By {{name}}</a>
          {{/author}}
            {{!-- Published time --}}
            <div class="post-author-date"><span>Published: </span><time datetime="{{date format='YYYY-MM-DD'}}">{{date published_at timeago="true"}}</time></div>
          </div>
        </div>
        {{!-- content post --}}
        <div class="post-main">
          {{!-- Title Post --}}
          <h1 class="post-title">{{title}}</h1>
          {{!-- Add Cover Img Post --}}
          {{#if image}}<img src="{{image}}" alt="{{title}}" class="post-img"/>{{/if}}
          {{content}}
          {{!-- Post Share --}}
          <aside class="share">
            <a class="share-link btn bg-facebook" data-spec="width=580,height=296" data-name="facebook-share" data-title="{{encode title}}" data-url="{{url absolute='true'}}" data-template='https://www.facebook.com/sharer/sharer.php?u=%s&title=%s'><i class="icon-facebook"></i> <span>Facebook</span></a>
            <a class="share-link btn bg-twitter" data-spec="width=550,height=235" data-name="twitter-share" data-title="{{encode title}}" data-url="{{url absolute='true'}}" data-template='https://twitter.com/share?url=%s&text=%s'><i class="icon-twitter"></i> <span>Twitter</span></a>
            <a class="share-link btn bg-linkedin" data-spec="width=600,height=494" data-name="linkedin-share" data-title="{{encode title}}" data-url="{{url absolute='true'}}" data-template='https://www.linkedin.com/shareArticle?mini=true&url=%s&title=%s'><i class="icon-linkedin"></i> <span>LinkedIn</span></a>
			      <a class="share-link btn bg-google-plus" data-spec="menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=600" data-name="google-plus-share" data-title="{{encode title}}" data-url="{{url absolute='true'}}" data-template='https://plus.google.com/share?url=%s&title=%s'><i class="icon-google-plus"></i> <span>Google+</span></a>
          </aside>
        </div>
      </article>
      {{!-- Previous and next post --}}
      <div class="prev-next-post">
        {{#prev_post}}
        <div class="prev-next-row">
          <a href="{{url}}" class="prev-next-link {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}" >
            <h2 class="prev-next-title">{{title}}</h2>
          </a>
          <a href="{{url}}" class="prev-next-btn btn" style="left:24px"><i class="icon-arrow_left"></i> Previous Post</a>
        </div>
        {{/prev_post}}
        {{#next_post}}
        <div class="prev-next-row">
          <a href="{{url}}" class="prev-next-link {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}" >
            <h2 class="prev-next-title">{{title}}</h2>
          </a>
          <a href="{{url}}" class="prev-next-btn btn" style="right:24px">Next Post <i class="icon-arrow_right"></i></a>
        </div>
        {{/next_post}}
      </div>
      {{!-- Add Comments --}}

	  {{> comments}}

	</div>
    {{!-- Add Sidebar --}}
    {{!> "sidebar"}}
  </section>
</main>
{{/post}}
